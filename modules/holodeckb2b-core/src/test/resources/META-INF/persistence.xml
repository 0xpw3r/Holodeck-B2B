<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="holodeckb2b-core-test" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>org.holodeckb2b.ebms3.persistent.general.TradingPartner</class>
    <class>org.holodeckb2b.ebms3.persistent.message.ErrorMessage</class>
    <class>org.holodeckb2b.ebms3.persistent.message.MessageUnit</class>
    <class>org.holodeckb2b.ebms3.persistent.message.Payload</class>
    <class>org.holodeckb2b.ebms3.persistent.message.PullRequest</class>
    <class>org.holodeckb2b.ebms3.persistent.message.Receipt</class>
    <class>org.holodeckb2b.ebms3.persistent.message.UserMessage</class>
    <class>org.holodeckb2b.ebms3.persistent.processing.ProcessingState</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby:target/db/core;create=true"/>
      <property name="javax.persistence.jdbc.user" value="test"/>
      <property name="javax.persistence.jdbc.password" value="test"/>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
    </properties>
  </persistence-unit>
</persistence>
